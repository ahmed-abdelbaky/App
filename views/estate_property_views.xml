<odoo>
    <data>

        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="real_estate_list" model="ir.ui.view">
            <field name="name">real estate list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree string="Real Estate">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>
                    <field name="garage"/>
                    <field name="garden"/>
                    <field name="garden_area"/>
                    <field name="garden_orientation"/>
                    <field name="type_id"/>
                    <field name="sales_person"/>
                    <field name="partner_id"/>
                    <field name="tag_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="real_estate_form" model="ir.ui.view">
            <field name="name">Real Estate Form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <header>
                            <button name="button_sold" type="object" string="Sold" class="btn btn-primary"/>
                            <button name="button_cancel" type="object" string="Cancel" class="btn btn-primary"/>
                        </header>
                        <group>
                            <group>
                                <field name="name" style="font-size:30px; font-color:black"/>
                                <field name="state"/>
                                <field name="tag_ids" widget="many2many_tags"/>
                                <field name="type_id"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_price"/>
                                <field name="selling_price"/>
                                <field name="active" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="active"/>

                                    <field name="total_area"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <group>
                                    <field name="offer_ids"/>
                                </group>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="sales_person"/>
                                    <field name="partner_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="real_estate_search" model="ir.ui.view">
            <field name="name">Real Estate Search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="state"/>
                    <field name="postcode"/>
                    <filter string="display available properties"
                            name="display_available_properties"
                            domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                    <filter string="ability to group result"
                            name="group_result"
                            context="{'group_by':'postcode'}"/>
                </search>
            </field>
        </record>

    </data>
</odoo>